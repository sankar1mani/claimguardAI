{
  "policy_name": "Indian Health Insurance Policy - Strict Rules",
  "policy_version": "1.0",
  "effective_date": "2025-01-01",
  "description": "Comprehensive policy rules for health insurance claim adjudication with fraud detection and exclusion management",
  
  "sum_insured_limits": {
    "individual": 500000,
    "family_floater": 1000000,
    "senior_citizen": 300000
  },
  
  "room_rent_rules": {
    "description": "Room rent capping based on sum insured percentage",
    "allowed_percentage": 1,
    "calculation_note": "If actual room rent > 1% of Sum Insured, apply proportionate deduction",
    "formula": "(Allowed Limit / Actual Rent) * Claim Amount = Payable Amount",
    "examples": [
      {
        "sum_insured": 500000,
        "allowed_room_rent_per_day": 5000,
        "actual_room_rent_per_day": 8000,
        "claim_amount": 100000,
        "payable_amount": 62500,
        "deduction": 37500,
        "explanation": "(5000 / 8000) * 100000 = 62500"
      }
    ]
  },
  
  "excluded_items": {
    "description": "Items that are automatically rejected from claims",
    "categories": [
      {
        "category": "Dietary Supplements",
        "items": [
          "Protein Powder",
          "Whey Protein",
          "Mass Gainer",
          "Nutritional Supplements",
          "Vitamin Supplements",
          "Mineral Supplements",
          "Health Supplements",
          "Food Supplements",
          "Dietary Supplements",
          "Protein Supplements",
          "Amino Acids",
          "Pre-Workout Supplements",
          "Post-Workout Supplements"
        ],
        "reason": "Wellness and fitness supplements are not covered"
      },
      {
        "category": "Cosmetics & Personal Care",
        "items": [
          "Cosmetics",
          "Beauty Products",
          "Moisturizer",
          "Face Cream",
          "Body Lotion",
          "Shampoo",
          "Conditioner",
