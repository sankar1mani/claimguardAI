    ],
    "partial_match_keywords": [
      "supplement",
      "cosmetic",
      "beauty",
      "toiletry",
      "hygiene",
      "comfort",
      "convenience",
      "non-medical"
    ]
  },
  
  "fraud_detection_rules": {
    "visual_checks": [
      {
        "check_type": "date_tampering",
        "description": "Detect if receipt date has been digitally altered or photoshopped",
        "action": "AUTO_REJECT",
        "confidence_threshold": 0.7
      },
      {
        "check_type": "duplicate_receipt",
        "description": "Check if the same receipt has been submitted before",
        "action": "AUTO_REJECT",
        "confidence_threshold": 0.9
      },
      {
        "check_type": "blurred_amount",
        "description": "Detect if amount section is intentionally blurred or unclear",
        "action": "MANUAL_REVIEW",
        "confidence_threshold": 0.6
      },
      {
        "check_type": "inconsistent_font",
        "description": "Check for multiple font types indicating tampering",
        "action": "MANUAL_REVIEW",
        "confidence_threshold": 0.75
      },
      {
        "check_type": "missing_mandatory_fields",
        "description": "Verify presence of pharmacy/hospital name, address, GST number, date",
        "action": "AUTO_REJECT",
        "confidence_threshold": 1.0
      }
    ],
    "timestamp_validation": {
      "max_claim_submission_days": 30,
      "description": "Claims must be submitted within 30 days of discharge/purchase",
      "action_if_exceeded": "AUTO_REJECT"
    }
  },
  
  "claim_approval_thresholds": {
    "auto_approve_limit": 5000,
    "manual_review_range": {
      "min": 5001,
      "max": 50000
    },
    "senior_review_threshold": 50001,
    "description": "Claims under â‚¹5,000 with no red flags are auto-approved"
  },
  
  "pharmacy_specific_rules": {
    "description": "Rules specific to pharmacy reimbursement claims",
    "requirements": [
      "Original cash receipt required",
      "Valid prescription from registered medical practitioner",
      "Medicine must be part of treatment for covered illness/injury",
      "GST invoice with pharmacy details mandatory"
    ],
    "excluded_pharmacy_items": [
      "Over-the-counter supplements",
      "Cosmetic creams",
      "General wellness products"
    ]
  },
  
  "diagnostics_specific_rules": {
    "description": "Rules specific to diagnostic test reimbursement",
    "requirements": [
      "Doctor's prescription/referral required",
      "Test must be medically necessary",
      "Pathology lab must be certified",
      "Original invoice with lab registration number"
    ],
    "covered_tests": [
      "Blood Tests",
      "Imaging (X-Ray, CT Scan, MRI, Ultrasound)",
      "ECG/EEG",
      "Biopsy",
      "Pathology Tests"
    ],
    "excluded_tests": [
      "Routine health checkups (pre-existing)",
      "Fitness tests",
      "Non-prescription tests",
      "Experimental diagnostics"
    ]
  },
  
  "deduction_rules": {
    "copayment": {
      "standard": 10,
      "senior_citizen": 20,
      "description": "Percentage of claim amount to be borne by insured"
    },
    "sub_limits": {
      "pharmacy": {
        "per_claim_limit": 25000,
        "annual_limit": 100000
      },
      "diagnostics": {
        "per_claim_limit": 15000,
        "annual_limit": 75000
      }
    }
  },
  
  "waiting_periods": {
    "initial_waiting_period": 30,
    "pre_existing_diseases": 730,
    "specific_diseases": [
      {
        "disease": "Diabetes",
        "waiting_days": 730
      },
      {
        "disease": "Hypertension",
        "waiting_days": 730
      },
      {
        "disease": "Arthritis",
        "waiting_days": 730
      }
    ]
  },
  
  "document_requirements": {
    "mandatory": [
      "Original bills and receipts",
      "Discharge summary (for hospitalization)",
      "Prescription from registered doctor",
      "Diagnostic reports",
      "Identity proof",
      "Claim form (duly filled and signed)"
    ],
    "optional": [
      "Medical history",
      "Previous treatment records",
      "Referral letters"
    ]
  },
  
  "claim_processing_workflow": {
    "steps": [
      {
        "step": 1,
        "name": "Document Upload",
        "description": "User uploads bills, receipts, and supporting documents"
      },
      {
        "step": 2,
        "name": "Visual Fraud Check",
        "description": "AI Vision Agent scans for tampering, duplicates, and authenticity"
      },
      {
        "step": 3,
        "name": "Policy Compliance Check",
        "description": "Policy Agent validates against room rent caps, exclusions, and limits"
      },
      {
        "step": 4,
        "name": "Amount Calculation",
        "description": "Calculate payable amount after deductions and exclusions"
      },
      {
        "step": 5,
        "name": "Approval/Rejection",
        "description": "Auto-approve, reject, or route to manual review"
      }
    ]
  },
  
  "rejection_reasons": [
    "Excluded item found in claim",
    "Receipt tampering detected",
    "Duplicate claim submission",
    "Room rent exceeds allowed limit (proportionate deduction applied)",
    "Missing mandatory documents",
    "Claim submitted beyond time limit",
    "Non-covered service/treatment",
    "Pre-existing disease within waiting period",
    "Invalid or unverified provider",
    "Insufficient documentation"
  ]
}
